{
  "compilerOptions": {
    "target": "ESNext", // Use the latest version of JavaScript
    "module": "CommonJS", // Use the CommonJS module system
    "watch": true, // Watch for changes in the source files
    "strict": true, // Enable all strict type-checking options
    "esModuleInterop": true, // Enable interoperability between CommonJS and ES Modules via creation of namespace objects for all imports
    "rootDir": "./src", // The root directory of the source files
    "outDir": "./build", // The output directory for the compiled JavaScript files
    "forceConsistentCasingInFileNames": true // Ensure that casing is correct in imports
  }
}
